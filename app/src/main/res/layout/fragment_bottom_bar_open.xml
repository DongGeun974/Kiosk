<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/fragment_bottom_bar_open"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#33000000"
    android:orientation="vertical">

    <View
        android:id="@+id/view_close_bottom_bar"
        android:layout_width="match_parent"
        android:layout_height="400dp"
        android:layout_weight="1"/>

    <LinearLayout
        android:id="@+id/lay_fragBottombarClose_bottomBar"
        android:layout_width="match_parent"
        android:layout_height="240dp"
        android:layout_weight="1"
        android:background="#323232"
        android:gravity="center"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingLeft="20dp"
            android:paddingTop="10dp"
            android:paddingRight="20dp"
            android:paddingBottom="10dp">

            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:id="@+id/frame_fragBottomBarClose_iconWheel"
                android:visibility="visible">

                <ImageView
                    android:id="@+id/icon_wheel_unselected"
                    android:layout_width="@dimen/ic_bottombar_frag_size"
                    android:layout_height="@dimen/ic_bottombar_frag_size"
                    android:background="@drawable/frame_fragbottombar_icunselected"
                    android:src="@drawable/ic_fragbottombar_wheel"
                    android:visibility="visible" />

                <ImageView
                    android:id="@+id/icon_wheel_selected"
                    android:layout_width="@dimen/ic_bottombar_frag_size"
                    android:layout_height="@dimen/ic_bottombar_frag_size"
                    android:background="@drawable/frame_fragbottombar_icselected"
                    android:src="@drawable/ic_fragbottombar_wheel"
                    android:visibility="gone" />
            </FrameLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="화면을 아래쪽으로 이동합니다."
                android:textSize="@dimen/font_size_bottombar_frag_explain"
                android:background="#FFFFFF"
                android:layout_marginLeft="10dp"
                android:padding="10dp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingLeft="20dp"
            android:paddingTop="10dp"
            android:paddingRight="20dp"
            android:paddingBottom="10dp">

            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:id="@+id/frame_fragBottomBarClose_iconBigger"
                android:visibility="visible">

                <ImageView
                    android:id="@+id/icon_bigger_unselected"
                    android:layout_width="@dimen/ic_bottombar_frag_size"
                    android:layout_height="@dimen/ic_bottombar_frag_size"
                    android:background="@drawable/frame_fragbottombar_icunselected"
                    android:src="@drawable/ic_fragbottombar_bigger"
                    android:visibility="visible" />

                <ImageView
                    android:id="@+id/icon_bigger_selected"
                    android:layout_width="@dimen/ic_bottombar_frag_size"
                    android:layout_height="@dimen/ic_bottombar_frag_size"
                    android:background="@drawable/frame_fragbottombar_icselected"
                    android:src="@drawable/ic_fragbottombar_bigger"
                    android:visibility="gone" />
            </FrameLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="돋보기 기능이 제공됩니다."
                android:textSize="@dimen/font_size_bottombar_frag_explain"
                android:background="#FFFFFF"
                android:layout_marginLeft="10dp"
                android:padding="10dp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingLeft="20dp"
            android:paddingTop="10dp"
            android:paddingRight="20dp"
            android:paddingBottom="10dp">

            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/icon_blind"
                android:visibility="visible">

                <ImageView
                    android:id="@+id/icon_blind_unselected"
                    android:layout_width="@dimen/ic_bottombar_frag_size"
                    android:layout_height="@dimen/ic_bottombar_frag_size"
                    android:background="@drawable/frame_fragbottombar_icunselected"
                    android:src="@drawable/ic_fragbottombar_colorblind"
                    android:visibility="visible" />

                <ImageView
                    android:id="@+id/icon_blind_selected"
                    android:layout_width="@dimen/ic_bottombar_frag_size"
                    android:layout_height="@dimen/ic_bottombar_frag_size"
                    android:background="@drawable/frame_fragbottombar_icselected"
                    android:src="@drawable/ic_fragbottombar_colorblind"
                    android:visibility="gone" />
            </FrameLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="색맹 전용 UI로 변경합니다."
                android:background="#FFFFFF"
                android:textSize="@dimen/font_size_bottombar_frag_explain"
                android:layout_marginLeft="10dp"
                android:padding="10dp"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>